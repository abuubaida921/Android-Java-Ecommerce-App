<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash_screen_bg"
    android:orientation="vertical"
    tools:context=".activity.OnBordingActivity">

    <RelativeLayout
        android:layout_weight=".9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_weight="1"
        android:background="@drawable/gradient_splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_icon" />

        <TextView
            android:id="@+id/big_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Welcome\nto our store"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/onbording_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/big_title"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/abyssinica_sil_regular"
            android:text="Get your groceries in as fast as one hour"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/onbording_sub_title" />

        <Button
            android:id="@+id/get_started_btn"
            android:layout_below="@id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:background="@drawable/round_button"
            android:text="Get Started"
            android:textSize="@dimen/btn_txt"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:onClick="getStarted"
            tools:ignore="OnClick" />

    </RelativeLayout>

</LinearLayout>